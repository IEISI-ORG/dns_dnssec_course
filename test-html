#!/bin/bash

if [ -z "$1" ]; then
    echo "Usage: $0 <markdown-file>"
    exit 1
fi

MD_FILE="$1"
HTML_FILE="${MD_FILE%.md}.html"

if [ ! -f "$MD_FILE" ]; then
    echo "Error: File '$MD_FILE' not found"
    exit 1
fi

marp --theme dns-workshop-css-theme.css "$MD_FILE" && google-chrome "$HTML_FILE"

